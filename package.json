{
  "name": "ocarina-tabs-prototype",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "build:next": "next build",
    "build:app": "npm run build:next && electron-builder"
  },
  "dependencies": {
    "html-to-image": "^1.11.13",
    "nanoid": "5.0.7",
    "next": "14.2.5",
    "pdf-lib": "^1.17.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "soundfont-player": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "5.5.4"
  },
  "build": {
    "appId": "com.ocarina-tabs.prototype",
    "productName": "Ocarina Tabs",
    "icon": "app/app-icon.png",
    "files": ["electron/**", "package.json", "app/app-icon.png"],
    "extraResources": [
      { "from": "out", "to": "out" }
    ],
    "directories": { "output": "release" },
    "win": {
      "target": ["nsis", "portable"],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.music"
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
